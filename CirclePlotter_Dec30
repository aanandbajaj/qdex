  <!-- Circle/Ellipse -->
  <section name="Circle">
    <title>Circle Relation</title>
    <stack style="questionAnswer">
      <p style="title"> QUESTION 1</p>
      <table name="table" grid="false">
        <row>
          <column>
            <equation>
             $ r^2 = (x - a)^2 + (y - b)^2 $
            </equation>
            <style name="blackLine">
              <foreground color="black" />
            </style>
            <style name="functionLine">
              <foreground color="50 133 184" />
              <lineThickness>3</lineThickness>
            </style>
            <xyPlot name="myPlot" pan="disabled" tap="disabled" zoom="disabled">
              <axis dim="y" auto="fixed" min="-20" max="20"></axis>
              <axis dim="x" auto="fixed" min="-20" max="20"></axis>
              <series name="xAxis" manual="true" style="blackLine" />
              <series name="yAxis" manual="true" style="blackLine" />
              <series name="ellipse_series" manual="true" style="functionLine" />
            </xyPlot>

            <script>

              <![CDATA[
              
              a = 5;
              b = 5;
              ellipse = myPlot.ellipse_series;
              graphRoundValue = 0.1;
              labelRoundValue = 0.1;
              
              
              local function redrawEllipse()
                -- plotTools.drawEllipse([Series],[Centre],[X-radius],[Y-radius])
                ellipse:Clear()
                plotTools.drawEllipse(ellipse, vector({0, 0}), a, b)
                ellipse:Update()
              end
              
              local xAxis = myPlot.xAxis;
              local yAxis = myPlot.yAxis;

              xAxis:Add(-100,0)
              xAxis:Add(100,0)

              yAxis:Add(0,-100)
              yAxis:Add(0,100)
              
              redrawEllipse();
              ]]>
            </script>

            <p name="newEquation" style="centerText">
              Your Equation: r<sup>2</sup>= (x-a)<sup>2</sup>+ (y-b)<sup>2</sup>
            </p>
            <p style="centerText" name="parameters">Centre (a,b)</p>

            <script>
              <![CDATA[
               i = a;
               j = b;
               k = 0;
              local function updateEquation()
                newEquation.FormattedText = "Your Equation: r<sup>2</sup> = ".."(x - "..i..")".."<sup>2</sup> + ".."(y - "..j..")".."<sup>2</sup>"
                parameters.FormattedText = "Centre ("..i..","..j..")";

              end
              
              function updateAValue(value)
                i = round(value,labelRoundValue);
              end
              
              function updateBValue(value)
                j = round(value,labelRoundValue);
              end
              
              function updateCValue(value)
                k = round(value,labelRoundValue)
              end
                
              updateEquation()
                            
               function round(value,multiple)
                result = 0;
                
                if value % multiple ~= 0 then
                  result = multiple;
                  division = math.floor((value/multiple)+1);
                  result = division*multiple;
                  return result;
                else 
                  return value;
                end
              end
            ]]>
            </script>

            <!--slider for a-->
            <stack orientation="horizontal">
              <p name="aLabel">a = 5.00</p>
              <slider name="aSlider" min="0" max="20" value="5">
                <onValueChanged>
                 <![CDATA[
                  a = round(value,graphRoundValue);
                  aLabel.Text = "a = "..round(value,labelRoundValue)
                  redrawEllipse();
                  updateAValue(value);
                  updateEquation();
                ]]>
                </onValueChanged>
              </slider>
            </stack>

            <!--slider for b-->
            <stack orientation="horizontal">
              <p name="bLabel">b = 5.00</p>
              <slider name="bSlider" min="0" max="20" value="5">
                <onValueChanged>
                  <![CDATA[
                  b = round(value, graphRoundValue);
                  bLabel.Text = "b = "..round(value,labelRoundValue)
                  redrawEllipse();
                  updateBValue(value);
                  updateEquation();
                ]]>
                </onValueChanged>
              </slider>
            </stack>
          </column>
        </row>
      </table>

    </stack>
  </section>

